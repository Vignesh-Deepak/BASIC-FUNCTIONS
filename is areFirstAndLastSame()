int areFirstAndLastSame(char str[])
{
   for(int i=0;str[i]!='\0';i++)
   {
      if(str[i]==str[strlen(str)-1)  func must check character of first letter and last letter are equal
       return 1;
       else
        return 0;
   }
     
}
int main()
{
  char str[101];
  scanf("%[^\n]%*c",str);// read until new line character    or fgets(str,101,stdin); or gets(str);
  printf("%d",areFirstAndLastSame());
}
